<div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= @friend.last_name %>,  <%= @friend.first_name %></h5>
    <p class="card-text"> <%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
